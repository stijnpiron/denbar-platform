{
  "name": "denbar",
  "version": "1.0.0",
  "description": "DenBar",
  "main": "dist/server.js",
  "scripts": {
    "build:ts": "npm run rem-dist && npm run tsc",
    "dev:client": "npm run start --prefix src/client",
    "dev:server": "npm run format && ts-node-dev --project tsconfig.dev.json src/server/server.ts",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "docs": "typedoc --out docs --mode modules src",
    "format": "prettier --write src/**/*.ts",
    "heroku-postbuild": "npm i --prefix src/client && npm run build --prefix src/client",
    "lint": "eslint src/**/*.ts --fix",
    "lint:commit": "eslint src/**/*.ts",
    "postinstall": "npm run build:ts",
    "prep:debug": "npm run format && npm run build:ts",
    "rem-dist": "rimraf ./dist",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test:client": "npm t --prefix src/client",
    "test:server": "env TESTRUN=testrun ts-mocha",
    "test": "npm run test:server && npm run test:client",
    "tsc": "tsc",
    "validate": " npm i && npm run rem-dist && npm run format && npm run lint && npm run test && npm run rem-dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stijnpiron/denbar.git"
  },
  "author": "stijnpiron",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stijnpiron/denbar/issues"
  },
  "homepage": "https://github.com/stijnpiron/denbar#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:commit"
    }
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "mongoose-morgan": "^1.0.15",
    "qrcode": "^1.4.4",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.1.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.11",
    "@types/cookie-parser": "^1.4.2",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.6",
    "@types/qrcode": "^1.3.4",
    "@types/speakeasy": "^2.0.5",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-mocha": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  }
}
